<% layout('./layouts/boilerplate') %> <% campgrounds.map(camp => { %>
<div class="card m-3" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img
        class="img-fluid"
        alt=""
        src="<%=camp.image%>"
        style="width: auto; height: 100%; object-fit: cover"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location%></small>
        </p>
        <a class="btn btn-primary text-light" href="/camps/<%=camp._id%>">View <%=camp.title%></a>
      </div>
    </div>
  </div>
</div>
<% }); %>
